<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
        <meta name="description" content="" />
        <meta name="author" content="" />
        <title>
            CMS
        </title>
        <!-- Favicon-->
        <link rel="icon" type="image/x-icon" href="{{ asset('static/assets/favicon.ico') }}" />
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.20/dist/sweetalert2.min.css">
        <!-- Font Awesome icons (free version)-->
        {% do pimcore_head_script().appendFile(asset('https://use.fontawesome.com/releases/v6.3.0/js/all.js')) %}
        <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.9.0/gsap.min.js"></script>
        <!-- Google fonts-->
        {% do pimcore_head_link().appendStylesheet('https://fonts.googleapis.com/css?family=Montserrat:400,700') %}
        {% do pimcore_head_link().appendStylesheet('https://fonts.googleapis.com/css?family=Roboto+Slab:400,100,300,700') %}
        <!-- script -->
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11.0.20/dist/sweetalert2.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/gsap.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/gsap/3.12.2/ScrollTrigger.min.js"></script>
        <!-- Core theme CSS (includes Bootstrap)-->
        {% do pimcore_head_link().appendStylesheet(asset('static/css/styles.css')) %}
        {% do pimcore_head_link().appendStylesheet(asset('static/css/timeline.css')) %}
        {% do pimcore_head_link().appendStylesheet(asset('static/css/auth.css')) %}
        {{ pimcore_head_link() }}
        {% set user = app.session.get('user') %}
    </head>
    <body id="page-top">
        <!-- Navigation-->
        <nav class="navbar navbar-expand-lg navbar-dark fixed-top" id="mainNav">
            <div class="container">
                {% set selectedLanguage = app.request.cookies.get('selected_language', 'de') %}
                <a class="navbar-brand" href="/{{ selectedLanguage }}">
                    <img src="{{ asset('static/assets/img/logos/schriftzug-logo.svg') }}" alt="..." />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
                    Menu
                                        
                    <i class="fas fa-bars ms-1"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarResponsive">
                    {% set selectedLanguageId = app.request.cookies.get('selected_language_id', '15') %}
                    {% set langDocument = pimcore_document(selectedLanguageId) %}
                    {% set mainNavigation = pimcore_build_nav({
                        active: document,
                        root: langDocument
                    }) %}
                    {% set renderer = pimcore_nav_renderer('menu') %}
                    <ul class="navbar-nav text-uppercase ms-auto py-4 py-lg-0">
                        {% if app.session.get('user_logged_in') %}
                            {% for page in mainNavigation %}
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ page.getHref }}" {% if page.active %} class="active" {% endif %}>
                                        {{ page.label }}
                                    </a>
                                </li>
                            {% endfor %}
                        {% endif %}
                    
                        <div class="dropdown me-2 ">
                            <button class="btn dropdown-toggle text-white" type="button" id="languageDropdown" data-bs-toggle="dropdown" aria-expanded="false">
                                {% if selectedLanguage == 'de' %}
                                    <img class="language_icon" src="{{ asset('static/assets/img/svg/german.svg') }}" alt="..." />
                                    Deutsch
                                {% else %}
                                    <img class="language_icon" src="{{ asset('static/assets/img/svg/english.svg') }}" alt="..." />
                                    English
                                {% endif %}
                            </button>
                            <ul class="dropdown-menu" aria-labelledby="languageDropdown">
                                <li>
                                    <a class="dropdown-item" href="#" onclick="setLanguage('14', 'de')">
                                        <img class="language_icon" src="{{ asset('static/assets/img/svg/german.svg') }}" alt="..." />  Deutsch
                                    </a>
                                </li>
                                <li>
                                    <a class="dropdown-item" href="#" onclick="setLanguage('15', 'en')">
                                        <img class="language_icon" src="{{ asset('static/assets/img/svg/english.svg') }}" alt="..." /> English
                                    </a>
                                </li>
                            </ul>
                        </div> 
                        <button id="showPopup" data-user="{{ app.session.get('user_logged_in')|json_encode|raw }}" class="btn">
                            <i class="fa-solid fa-user fa-lg" style="color: #ffffff"></i>
                        </button>
                    </ul>  
                    </div>
                </div>
            </nav>
            <!-- Masthead-->
            <header class="masthead">
                <div class="container">
                    <h2 class="masthead-subheading">
                        Technische Hochschule Mittelhessen
                    </i>
                </h2>
                <h1 class="masthead-heading text-uppercase">
                    Medieninformatik
                </h1>
            </div>
        </header>
        {{ block('content') }}
        <!-- Footer-->
        <footer class="footer py-4">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-4 text-lg-start text-white">
                        Copyright &copy; CMS SoSe2023
                    </div>
                    <div class="col-lg-4 my-3 my-lg-0">
                        <a class="btn btn-dark btn-social mx-2" href="https://twitter.com/THMittelhessen" aria-label="Twitter">
                            <i class="fab fa-twitter"></i>
                        </a>
                        <a class="btn btn-dark btn-social mx-2" href="https://www.facebook.com/thm.de" aria-label="Facebook">
                            <i class="fab fa-facebook-f"></i>
                        </a>
                        <a class="btn btn-dark btn-social mx-2" href="https://www.linkedin.com/school/technische-hochschule-mittelhessen" aria-label="LinkedIn">
                            <i class="fab fa-linkedin-in"></i>
                        </a>
                    </div>
                    <div class="col-lg-4 text-lg-end">
                        <a class="text-decoration-none me-3" href="https://www.thm.de/site/datenschutz.html">
                            Datenschutz
                        </a>
                        <a class="text-decoration-none" href="https://www.thm.de/site/impressum.html ">
                            Impressum
                        </a>
                    </div>
                </div>
            </div>
        </footer>
        {{ include('auth/auth.html.twig') }}
        <!-- Section: Design Block -->
        <!-- Bootstrap core JS-->
        {% do pimcore_head_script().appendFile(asset('https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js')) %}
        <!-- Core theme JS-->
        {% do pimcore_head_script().appendFile(asset('static/js/scripts.js')) %}
        {% do pimcore_head_script().appendFile(asset('static/js/gsap.js')) %}
        <!-- * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *-->
        <!-- * *                               SB Forms JS                               * *-->
        <!-- * * Activate your form at https://startbootstrap.com/solution/contact-forms * *-->
        <!-- * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * *-->
    {% do pimcore_head_script().appendFile(asset('https://cdn.startbootstrap.com/sb-forms-latest.js')) %}
{{ pimcore_head_script() }}
</body></html>