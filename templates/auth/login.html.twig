{%  block content %}
{% if not app.session.get('user_logged_in') %}
<div id="popupContainer">
    <div id="popup">  
            <div id="cover">
                <!-- Sign Up Section -->
                <div class="sign-up">
                    <h3 class="section-heading text-white">{{ pimcore_input('registerHeadline') }}</h3>
                    <p class="text-white">{{ pimcore_input('registerText') }}</p>
                    <button id="signUpButton" class="coverSwitchBtn" onClick="coverLogin()">Registrieren</button>
                </div>
                <!-- Sign In Section -->
                <div class="sign-in">
                    <h3 class="section-heading text-white">{{ pimcore_input('loginHeadline') }}</h3>
                    <p class="text-white">{{ pimcore_input('loginText') }}</p>
                    <br>
                    <button id="signInButton"  class="coverSwitchBtn" onClick="coverRegister()">Einloggen</button>
                </div>
            </div>
            <!-- Login Box -->
            <div id="login">
                <h1 class="mb-4">Log dich ein</h1>
                <form id="loginForm" method="POST" action="{{ path('login') }}">
                    <input type="email" id="emailInputLogin" placeholder="Email" name="email"><br>
                    <input type="password" id="passwordInputLogin" placeholder="Passwort" name="password" class="mb-4"><br>
                    <a id="forgot-pass" href="#">Passwort vergessen?</a><br>
                    <input class="submit-btn" type="submit" id="loginBtn" value="Einloggen">
                </form>
            </div>
            <!-- Register Box -->
            <div id="register">
                <h1 class="mb-4">Lege einen Account an</h1>
                <form id="registerForm" method="POST" action="{{ path('register') }}"  enctype="multipart/form-data">
                    <input id="nameInputRegister" type="text" placeholder="Name" name="name"><br>
                    <input id="emailInputRegister" type="email" placeholder="Email" name="email"><br>
                    <input id="passwordInputRegister" type="password" placeholder="Passwort" name="password"><br>
                    <input id="passwordInputConfirmRegister" type="password" placeholder="Bestätige das Passwort" name="confirmPassword" value="" />
                    <input id="profileimage" type="file" name="profileimage"><br>                                       
                    <input id="registerBtn" class="submit-btn" type="submit" value="Registrieren">
                </form>
            </div>
            <div id="popupContainerRP">
                <div id="popupRP" class="d-flex flex-column align-items-end justify-content-start">
                    <!-- Close Button -->
                    <button id="closeButton" type="button" class="btn-close-custom align-self-end" aria-label="Close"></button>
                    <!-- Reset Password Box -->
                    <div id="containerRP">
                        <div id="resetPassword">
                            <h1 class="text-center">{{ pimcore_input('resetPasswordTitle') }}</h1>
                            <p class="card-text text-center py-2">
                                {{ pimcore_input('resetPasswordText') }}
                            </p>
                            <form id="sendEmailForm" method="POST" action="{{ path('resetPassword') }}" class="text-center">
                                <div class="d-flex justify-content-center">
                                    <input type="email" id="emailInputRp" class="form-control mb-2" placeholder="Email" name="email">
                                </div>
                                <div class="d-flex justify-content-center mt-4">
                                    <input id="show-alert-button" class="btn btn-primary" type="submit" value="Versende den Link">
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

{% else %}
<div id="popupContainerLogout">
    <div class="container d-flex justify-content-center align-items-center">
        <div class="logout-card">
            <div class="upper">
                <img src="https://i.imgur.com/Qtrsrk5.jpg" class="img-fluid" alt="Background Image">
                <div class="user">
                    <div class="profile">
                        <img src="{{ user.getImage() }}" class="rounded-circle" alt="User Image">
                    </div>
                </div>
            </div>
            <div class="mt-5 text-center">
                <h4 class="mb-0">{{ user.getUsername() }}</h4>
                <span class="text-muted d-block mb-2">Studiengang</span>       
                <div class="d-flex justify-content-between align-items-center mt-4 px-4">       
                    <div class="stats">
                        <h6 class="mb-0">Email</h6>
                        <span>{{ user.getEmail() }}</span>       
                    </div>
                    <div class="stats">
                        <h6 class="mb-0">Schwerpunkt</h6>
                        <span>Keiner Gewählt</span>
                    </div>
                </div>
            </div>
            <div class="centered mt-3">
                <a href="{{ path('logout') }}" class="logout-btn">
                <span class="btn-text">Logout</span>
                <i class="fa-solid fa-sign-out fa-lg btn-icon"></i>
                </a>
            </div>
        </div>
    </div>
</div>
{% endif %}
{% endblock %}