{% block content %}
    {% if not app.session.get('user_logged_in') %}
        <div id="popupContainer">
            <div id="popup">
                <div id="cover">
                    <!-- Sign Up Section -->
                    <div class="sign-up">
                        <h3 class="section-heading text-white">
                            {{ pimcore_input('registerHeadline') }}
                        </h3>
                        <p class="text-white">
                            {{ pimcore_input('registerText') }}
                        </p>
                        <button id="signUpButton" class="coverSwitchBtn" onClick="coverLogin()">
                            Registrieren
                                                                                
                                                    
                        </button>
                    </div>
                    <div class="sign-in">
                        <h3 class="section-heading text-white">
                            {{ pimcore_input('loginHeadline') }}
                        </h3>
                        <p class="text-white">
                            {{ pimcore_input('loginText') }}
                        </p>
                        <br>
                            <button id="signInButton" class="coverSwitchBtn" onClick="coverRegister()">
                                Einloggen
                                                                                            
                                                            
                            </button>
                        </div>
                    </div>
                    <div class="grid-container">
                        <!-- Sign In Section -->
                        <div class="grid-item">
                            <h1 class="mb-4">
                                Log dich ein
                                                                                            
                                                            
                            </h1>
                            <form id="loginForm" method="POST" action="{{ path('login') }}">
                                <input type="email" id="emailInputLogin" placeholder="Email" name="email">
                                    <br>
                                        <input type="password" id="passwordInputLogin" placeholder="Passwort" name="password" class="mb-4">
                                            <br>
                                                <a id="forgot-pass" href="#">
                                                    Passwort vergessen?
                                                                                                                                                        
                                                                                                    
                                                </a>
                                                <br>
                                                    <input onclick="login(event)" class="submit-btn" type="submit" id="loginBtn" value="Einloggen" />
                                                </form>
                                            </div>
                                            <div class="grid-item">
                                                <h1 class="mb-4">
                                                    Lege einen Account an
                                                                                                                                                            
                                                                                                    
                                                </h1>
                                                <form id="registerForm" method="POST" action="{{ path('register') }}" enctype="multipart/form-data">
                                                    <input id="nameInputRegister" type="text" placeholder="Name" name="name">
                                                        <br>
                                                            <input id="emailInputRegister" type="email" placeholder="Email" name="email" />
                                                            <br>
                                                                <input id="passwordInputRegister" type="password" placeholder="Passwort" name="password" /><br>
                                                                    <input id="passwordInputConfirmRegister" type="password" placeholder="BestÃ¤tige das Passwort" name="confirmPassword" value="" />
                                                                    <input id="profileimage" type="file" name="profileimage" />
                                                                    <br>
                                                                        <input onclick="register(event)" id="registerBtn" class="submit-btn" type="submit" value="Registrieren" />
                                                                    </form>
                                                                </div>
                                                            </div>
                                                            <div id="popupContainerRP">
                                                                <div id="popupRP" class="d-flex flex-column align-items-end justify-content-start">
                                                                    <!-- Close Button -->
                                                                    <button id="closeButton" type="button" class="btn-close-custom align-self-end" aria-label="Close"></button>
                                                                    <!-- Reset Password Box -->
                                                                    <div id="containerRP">
                                                                        <div id="resetPassword">
                                                                            <h1 class="text-center">
                                                                                {{ pimcore_input('resetPasswordTitle') }}
                                                                            </h1>
                                                                            <p class="card-text text-center py-2">
                                                                                {{ pimcore_input('resetPasswordText') }}
                                                                            </p>
                                                                            <form id="sendEmailForm" method="POST" action="{{ path('resetPassword') }}" class="text-center">
                                                                                <div class="d-flex justify-content-center">
                                                                                    <input type="email" id="emailInputRp" class="form-control mb-2" placeholder="Email" name="email"></div>
                                                                                    <div class="d-flex justify-content-center mt-4">
                                                                                        <input onclick="resetPassword(event)" id="show-alert-button" class="btn btn-primary" type="submit" value="Versende den Link"></div>
                                                                                    </form>
                                                                                </div>
                                                                            </div>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        {% else %}
                                                        {{ include('auth/profile.html.twig') }}
                                                        {% endif %}
                                                    {% endblock %}
                                                    