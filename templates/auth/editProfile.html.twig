<div id="editDialog" class="editProfileDialog">
    <div class="editProfile-content py-5">
        <div class="editProfileHeader">
            <h2 class="mt-2">Profil anpassen</h2>        
            <button id = "closeEditDialog" type="button" class="btn-close-custom" aria-label="Close"></button>
        </div>
        <form id="editProfileForm" class="mt-4" method="POST" action="{{ path('updateProfile') }}" enctype="multipart/form-data">
            <input id="nameInputEditProfile" type="text" name="name" value="{{ user.getUsername() }}"/>
            <br>
            <input id="emailInputEditProfile" type="email" placeholder="Email" name="email" value="{{ user.getEmail() }}"/>
            <br>            
            <input type="hidden" id="specializationInput" name="specialization" value="" />
            <select id="selectField" onchange="updateSpecializationInput()">
                {% for option in specializationsOptions %}
                    <option value="{{ option.value }}">{{ option.value }}</option>
                {% endfor %}
            </select>          
            <input id="profileimageEditProfile" type="file" name="profileimage" />
            <h4 class="mt-4">Verändere dein Passwort</h4>
            <input id="passwordInputEditProfile" type="password" placeholder="Passwort" name="password" /><br>
            <input id="passwordInputConfirmEditProfile" type="password" placeholder="Bestätige das Passwort"
                name="confirmPassword" value="" />
            <input id="editProfileBtn" class="submit-btn" type="submit"
                value="Änderungen übernehmen" onclick="handleSubmit(event, 'editProfileForm', '/updateProfile', '{{ documentLanguage }}')">
        </form>
    </div>
</div>