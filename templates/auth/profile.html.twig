<div id="popupContainerLogout">
    <div class="container d-flex justify-content-center align-items-center">
        <div class="logout-card">
            <div class="upper">
                <img src="https://i.imgur.com/Qtrsrk5.jpg" class="profile-img" alt="Background Image">
                    <div class="user">
                        <div class="profile">
                            <img src="{{ user.getImage() }}" class="rounded-circle" alt="User Image"></div>
                        </div>
                    </div>
                    <div class="mt-4 text-center">
                        <h4 class="mb-0">
                            {{ user.getUsername() }}
                        </h4>
                        <span class="text-muted d-block mb-2">
                            Studiengang                                                                                                    
                        </span>
                        <div class="text-center">
                            <h6 class="mb-0">
                                Email                                                                                                            
                            </h6>
                            <span>
                                {{ user.getEmail() }}
                            </span>
                        </div>
                    </div>
                    <div class="centered mt-3">
                        <a href="{{ path('logout') }}" class="logout-btn">
                            <span class="btn-text">
                                Logout                                                                                                         
                            </span>
                            <i class="fa-solid fa-sign-out fa-lg btn-icon"></i>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>