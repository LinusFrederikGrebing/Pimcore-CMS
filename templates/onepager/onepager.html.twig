
       {% extends 'layout.html.twig' %} 
       {% block content %}
        <!-- Services-->
        <section class="page-section" id="services">
            <div class="container">
                <div class="text-center mb-5">
                    <h2 class="section-heading text-uppercase">{{ pimcore_input("allgemeines") }}</h2>              
                </div>
                <div class="row text-center">
                    <div class="col-md-4">
                        <span class="fa-stack fa-4x">
                            <i class="fas fa-circle fa-stack-2x text-primary"></i>
                            <i class="fas fa-shopping-cart fa-stack-1x fa-inverse"></i>
                        </span>
                        <h4 class="my-3">{{ pimcore_input("abschluss") }}</h4>
                        <p class="text-muted">{{ pimcore_input("abschlusstext") }}</p>
                    </div>
                    <div class="col-md-4">
                        <span class="fa-stack fa-4x">
                            <i class="fas fa-circle fa-stack-2x text-primary"></i>
                            <i class="fas fa-laptop fa-stack-1x fa-inverse"></i>
                        </span>
                        <h4 class="my-3">{{ pimcore_input("semester") }}</h4>
                        <p class="text-muted">{{ pimcore_input("semestertext") }}</p>
                    </div>
                    <div class="col-md-4">
                        <span class="fa-stack fa-4x">
                            <i class="fas fa-circle fa-stack-2x text-primary"></i>
                            <i class="fas fa-lock fa-stack-1x fa-inverse"></i>
                        </span>
                        <h4 class="my-3">{{ pimcore_input("semesterzahl") }}</h4>
                        <p class="text-muted">{{ pimcore_input("semesterzahltext") }}</p>
                    </div>
                </div>
            </div>
        </section>
        <!-- Portfolio Grid-->
        <section class="page-section bg-light" id="portfolio">
            <div class="container">
                <div class="text-center">
                    <h2 class="section-heading text-uppercase">{{ pimcore_input("Schwerpunkte") }}</h2>
                    <h3 class="section-subheading text-muted">{{ pimcore_input("SchwerpunkteSubtext") }}</h3>
                </div>
                    {{ pimcore_areablock('specialization', {
                        'allowed': ['specialization-brick']
                    }) }}
            </div>
        </section>
        <!-- Team-->
         <section class="page-section bg-light" id="team">
            <div class="container">
                <div class="text-center">
                    <h2 class="section-heading text-uppercase">Our Amazing Team</h2>
                </div>
                {{ pimcore_areablock('panel', {
                    'allowed': ['panel-brick']
                }) }}
            </div>
        </section>
        {% endblock %}
